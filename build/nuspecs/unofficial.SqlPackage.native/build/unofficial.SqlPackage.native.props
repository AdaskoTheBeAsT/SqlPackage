<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="$(RuntimeIdentifier) != ''">
      <ItemGroup>
        <PackageReference Include="unofficial.SqlPackage.native.linux.x64" Version="" Condition="$(RuntimeIdentifier.StartsWith('linux'))"  />
        <PackageReference Include="unofficial.SqlPackage.native.osx.x64" Version="" Condition="$(RuntimeIdentifier.StartsWith('osx'))" />
        <PackageReference Include="unofficial.SqlPackage.native.win.x64" Version="" Condition="$(RuntimeIdentifier.StartsWith('win'))" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="unofficial.SqlPackage.native.linux.x64" Version="" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' " />
        <PackageReference Include="unofficial.SqlPackage.native.osx.x64" Version="" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' "/>
        <PackageReference Include="unofficial.SqlPackage.native.win.x64" Version="" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' " />
      </ItemGroup>
    </Otherwise>
  </Choose>

</Project>